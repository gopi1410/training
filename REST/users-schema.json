{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Users",
    "type": "array",
    "items": {
        "title": "User",
        "type": "object",
        "properties": {
            "id": {
                "description": "The unique identifier for a product",
                "type": "number"
            },
            "name": {
                "type": "string"
            },
            "age": {
            	"type": "number"
            },
            "weight": {
            	"type": "string"
            },
            "links": {
                "type": "array",
                "items": {
                    "type": "object"
                },
                "minItems": 1
            }
        },
        "required": ["id", "name", "age"]
    }
}